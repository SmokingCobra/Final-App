<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jonschold.fragmentlayout.RecordingsActivity"
    android:background="@color/mainGray">


    <ImageButton
        android:layout_width="175sp"
        android:layout_height="175sp"
        android:id="@+id/ekklesia_pic_button"
        android:src="@drawable/open_my_eyes_cover"
        android:layout_row="0"
        android:layout_column="1"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/tmi_pic_button"
        android:layout_alignLeft="@+id/recordingExplanationText"
        android:layout_alignStart="@+id/recordingExplanationText"
        android:layout_marginStart="45dp" />

    <ImageButton
        android:layout_width="175sp"
        android:layout_height="175sp"
        android:id="@+id/logan_pic_button"
        android:src="@drawable/logan_pic"
        android:layout_row="0"
        android:layout_column="3"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/ekklesia_pic_button"
        android:layout_alignRight="@+id/recordingExplanationText"
        android:layout_alignEnd="@+id/recordingExplanationText"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <ImageButton
        android:layout_width="175sp"
        android:layout_height="175sp"
        android:id="@+id/isaiah_pic_button"
        android:layout_row="3"
        android:layout_column="1"
        android:src="@drawable/isaiah_pic"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/logan_pic_button"
        android:layout_toRightOf="@+id/recordingExplanationText"
        android:layout_toEndOf="@+id/recordingExplanationText" />

    <ImageButton
        android:layout_width="175sp"
        android:layout_height="175sp"
        android:id="@+id/tmi_pic_button"
        android:layout_row="3"
        android:layout_column="3"
        android:src="@drawable/tmi_pic"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/recordingExplanationText"
        android:layout_toStartOf="@+id/recordingExplanationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="I play drums in all these songs, along with guitar in Open My Eyes. \n\n Click to play/pause."
        android:id="@+id/recordingExplanationText"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:textSize="17sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
